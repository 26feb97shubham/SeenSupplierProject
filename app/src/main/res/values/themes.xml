<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EComerceSupplier" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/gold</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Fullscreen" parent="Theme.EComerceSupplier">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="orangeRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="grayRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#515151</item>
        <item name="colorControlActivated">#515151</item>
    </style>
    <style name="RadioButtonGold">
        <item name="colorAccent">@color/gold</item>
        <item name="colorControlNormal">@color/gold</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>
    <style name="MyAlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">50%</item>
        <item name="windowFixedWidthMinor">20%</item>
    </style>
</resources>