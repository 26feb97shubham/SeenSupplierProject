<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ViewItemFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingHorizontal="@dimen/_8sdp"
       android:paddingBottom="@dimen/_8sdp">
       <com.google.android.material.textview.MaterialTextView
           android:layout_width="@dimen/_100sdp"
           android:layout_height="@dimen/_30sdp"
          android:id="@+id/mtv_view_items_header"
          android:text="@string/view_item"
          android:textAllCaps="true"
          android:gravity="center_vertical"
          android:fontFamily="@font/expressway_rg"
          android:textStyle="bold"
          android:textColor="@color/gray_color"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"/>

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/rv_images_videos"
           app:layout_constraintTop_toBottomOf="@id/mtv_view_items_header"
           android:layout_marginTop="@dimen/_8sdp"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           app:layout_constraintTop_toBottomOf="@id/rv_images_videos"
           android:layout_marginTop="@dimen/_8sdp"
           android:background="@color/light_gray"
           android:id="@+id/divider_1"/>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/cl_item_details"
           app:layout_constraintTop_toBottomOf="@id/divider_1"
           android:layout_marginTop="@dimen/_4sdp"
           android:paddingHorizontal="@dimen/_8sdp">

           <com.google.android.material.textview.MaterialTextView
               android:layout_width="@dimen/_120sdp"
               android:layout_height="@dimen/_20sdp"
               android:id="@+id/mtv_item_name"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:textColor="@color/gray_color"
               android:textColorHint="@color/gray_color"
               android:hint="@string/nike"
               android:ellipsize="end"
               android:textAllCaps="false"
               android:gravity="center_vertical"
               android:fontFamily="@font/expressway_rg"
               android:textStyle="bold"/>

           <com.google.android.material.textview.MaterialTextView
               android:layout_width="@dimen/_80sdp"
               android:layout_height="@dimen/_20sdp"
               android:id="@+id/mtv_item_price"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:textColor="@color/gray_color"
               android:textColorHint="@color/gray_color"
               android:hint="@string/nike"
               android:visibility="gone"
               android:ellipsize="end"
               android:textAllCaps="false"
               android:gravity="center_vertical|right"
               android:fontFamily="@font/expressway_rg"
               android:textStyle="bold"/>

           <com.google.android.material.textview.MaterialTextView
               android:layout_width="@dimen/_80sdp"
               android:layout_height="@dimen/_15sdp"
               android:id="@+id/mtv_item_category"
               app:layout_constraintTop_toBottomOf="@id/mtv_item_name"
               app:layout_constraintStart_toStartOf="parent"
               android:textColor="@color/gold"
               android:textColorHint="@color/gold"
               android:hint="@string/nike"
               android:ellipsize="end"
               android:textAllCaps="false"
               android:gravity="center_vertical"
               android:fontFamily="@font/expressway_rg"
               android:textStyle="normal"/>

           <LinearLayout
               android:id="@+id/ratingView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:visibility="gone"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/mtv_item_price">

               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/txtRating_naqashat"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:text="3.5"
                   android:textAlignment="viewStart"
                   android:textColor="@color/orange"
                   android:textDirection="locale"
                   android:textSize="@dimen/_9ssp"
                   app:layout_constraintTop_toTopOf="parent" />

               <RatingBar
                   android:id="@+id/ratingBar_naqashat"
                   style="?attr/ratingBarStyleSmall"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/_4sdp"
                   android:rating="3.5"
                   android:textAlignment="viewStart"
                   android:textDirection="locale"
                   android:theme="@style/orangeRatingBar" />

           </LinearLayout>
       </androidx.constraintlayout.widget.ConstraintLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           app:layout_constraintTop_toBottomOf="@id/cl_item_details"
           android:layout_marginTop="@dimen/_8sdp"
           android:background="@color/light_gray"
           android:id="@+id/divider_2"/>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/supplierView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_6sdp"
           app:layout_constraintTop_toBottomOf="@+id/divider_2">

           <TextView
               android:id="@+id/supplierName"
               android:layout_width="@dimen/_75sdp"
               android:layout_height="@dimen/_13sdp"
               android:gravity="start"
               android:text="@string/supplier_name"
               android:textColor="@color/gold"
               android:textSize="@dimen/_9ssp"
               android:visibility="gone"
               android:textStyle="normal"
               android:ellipsize="end"
               android:textDirection="locale"
               android:textAlignment="viewStart"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:textAllCaps="false"
               android:fontFamily="@font/expressway_rg"/>

           <TextView
               android:id="@+id/txtAvailable"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/_13sdp"
               android:text="@string/item_available"
               android:textColor="@color/gold"
               android:textSize="@dimen/_10ssp"
               android:textStyle="normal"
               android:visibility="gone"
               android:maxLines="1"
               android:ellipsize="end"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:textAllCaps="false"
               android:fontFamily="@font/expressway_rg"/>

           <com.google.android.material.card.MaterialCardView
               android:id="@+id/view"
               android:layout_width="@dimen/_50sdp"
               android:visibility="gone"
               android:layout_height="@dimen/_50sdp"
               android:layout_marginTop="@dimen/_5sdp"
               app:layout_constraintTop_toBottomOf="@id/supplierName"
               app:layout_constraintStart_toStartOf="parent"
               app:cardCornerRadius="@dimen/_10sdp">
               <ImageView
                   android:id="@+id/supplierImg"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="fitXY"
                   android:src="@drawable/default_icon"/>
           </com.google.android.material.card.MaterialCardView>

           <TextView
               android:id="@+id/supplierName2"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/_13sdp"
               android:visibility="gone"
               android:gravity="start"
               android:text="@string/supplier_name"
               android:textColor="@color/txt_dark_gray"
               android:textSize="@dimen/_9ssp"
               android:textStyle="bold"
               android:ellipsize="end"
               android:textDirection="locale"
               android:textAlignment="viewStart"
               app:layout_constraintStart_toEndOf="@id/view"
               app:layout_constraintTop_toTopOf="@id/view"
               android:layout_marginTop="@dimen/_4sdp"
               android:layout_marginStart="@dimen/_4sdp"
               android:textAllCaps="false"
               android:fontFamily="@font/expressway_rg"/>

           <TextView
               android:id="@+id/category"
               android:layout_width="@dimen/_40sdp"
               android:layout_height="wrap_content"
               android:visibility="gone"
               android:gravity="start"
               android:text="@string/gadgets"
               android:textColor="@color/gold"
               android:textSize="@dimen/_10ssp"
               android:textStyle="normal"
               android:maxLines="1"
               android:ellipsize="end"
               app:layout_constraintStart_toEndOf="@id/view"
               app:layout_constraintTop_toBottomOf="@id/supplierName2"
               app:layout_constraintStart_toStartOf="@id/supplierName2"
               android:textAllCaps="false"
               android:fontFamily="@font/expressway_rg"/>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/ratingView_supplier"
               android:layout_width="@dimen/_75sdp"
               android:layout_height="wrap_content"
               android:visibility="gone"
               app:layout_constraintStart_toStartOf="@id/supplierName2"
               app:layout_constraintTop_toBottomOf="@+id/category">
               <TextView
                   android:id="@+id/txtSupplierRating"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="3.5"
                   android:textDirection="locale"
                   android:textAlignment="viewStart"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:textColor="@color/orange"
                   android:textSize="@dimen/_8ssp"/>

               <RatingBar
                   android:id="@+id/supplierRatingBar"
                   style="?attr/ratingBarStyleSmall"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/_4sdp"
                   android:rating="3.5"
                   android:theme="@style/orangeRatingBar"
                   app:layout_constraintStart_toEndOf="@+id/txtSupplierRating"
                   app:layout_constraintTop_toTopOf="parent" />

           </androidx.constraintlayout.widget.ConstraintLayout>

           <TextView
               android:id="@+id/yes"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/yes"
               android:textColor="@color/black"
               android:textSize="@dimen/_8ssp"
               android:maxLines="1"
               android:visibility="gone"
               android:layout_marginTop="@dimen/_5sdp"
               android:background="@drawable/select_unselect_attr"
               android:ellipsize="end"
               android:padding="@dimen/_5sdp"
               android:layout_marginEnd="@dimen/_5sdp"
               app:layout_constraintEnd_toStartOf="@+id/no"
               app:layout_constraintTop_toBottomOf="@+id/txtAvailable"
               android:textAllCaps="false"
               android:fontFamily="@font/expressway_rg"/>
           <TextView
               android:id="@+id/no"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/no"
               android:textColor="@color/black"
               android:textSize="@dimen/_8ssp"
               android:maxLines="1"
               android:visibility="gone"
               android:layout_marginTop="@dimen/_5sdp"
               android:background="@drawable/select_unselect_attr"
               android:ellipsize="end"
               android:padding="@dimen/_5sdp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txtAvailable"
               android:textAllCaps="false"
               android:layout_marginEnd="@dimen/_5sdp"
               android:fontFamily="@font/expressway_rg"/>

           <View
               android:id="@+id/view3"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_1sdp"
               android:background="@color/gray"
               android:visibility="gone"
               android:layout_marginTop="@dimen/_6sdp"
               app:layout_constraintTop_toBottomOf="@+id/view"/>

           <TextView
               android:id="@+id/txtProductDesc"
               android:layout_width="@dimen/_65sdp"
               android:layout_height="@dimen/_15sdp"
               android:ellipsize="end"
               android:fontFamily="@font/expressway_rg"
               android:gravity="start"
               android:text="@string/description"
               android:textAllCaps="false"
               android:textColor="@color/txt_dark_gray"
               android:textSize="@dimen/_11ssp"
               android:textStyle="bold"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/view3" />
           <TextView
               android:id="@+id/productDesc"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="start"
               android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_and_typesetting_industry_lorem_ipsum_has_been_the_industry_s_standard"
               android:textColor="@color/txt_gray"
               android:textSize="@dimen/_7ssp"
               android:ellipsize="end"
               android:layout_marginTop="@dimen/_4sdp"
               android:maxLines="5"
               android:textDirection="locale"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txtProductDesc"
               android:textAllCaps="false"
               android:fontFamily="@font/expressway_rg"/>

           <TextView
               android:id="@+id/readmore"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="start"
               android:text="Read more ..."
               android:textColor="@color/gold"
               android:textSize="@dimen/_7ssp"
               android:ellipsize="end"
               android:layout_marginTop="@dimen/_2sdp"
               android:textDirection="locale"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/productDesc"
               android:textAllCaps="false"
               android:fontFamily="@font/expressway_rg"/>
           <View
               android:id="@+id/view4"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_1sdp"
               android:background="@color/gray"
               android:layout_marginTop="@dimen/_6sdp"
               app:layout_constraintTop_toBottomOf="@+id/readmore"/>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rvList_attributes"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_8sdp"
               app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
               tools:listitem="@layout/item_attributes"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/view4" />
           <View
               android:id="@+id/view5"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_1sdp"
               android:background="@color/gray"
               android:layout_marginTop="@dimen/_12sdp"
               app:layout_constraintTop_toBottomOf="@+id/rvList_attributes"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>