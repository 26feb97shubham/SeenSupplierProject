<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardBackgroundColor="@color/light_white"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:id="@+id/txtPrimary"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/txtPrimaryValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/expressway_rg"/>
            <TextView
                android:id="@+id/txtPrimaryValue"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_18sdp"
                android:gravity="center"
                android:minWidth="@dimen/_18sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textAllCaps="false"
                android:fontFamily="@font/expressway_rg"/>
            <TextView
                android:id="@+id/txtSecondary"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/txtSecondaryValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPrimary"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/expressway_rg"/>
            <TextView
                android:id="@+id/txtSecondaryValue"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_18sdp"
                android:gravity="center"
                
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:minWidth="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPrimary"
                android:textAllCaps="false"
                android:fontFamily="@font/expressway_rg"/>
            <TextView
                android:id="@+id/txtThird"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:gravity="start"
                
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/txtThirdValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSecondary"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/expressway_rg"/>
            <TextView
                android:id="@+id/txtThirdValue"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_18sdp"
                android:gravity="center"
                
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:minWidth="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSecondary"
                android:textAllCaps="false"
                android:fontFamily="@font/expressway_rg"/>
            <LinearLayout
                android:id="@+id/llPriceQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtThird"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtItemPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/expressway_rg"
                    android:text="@string/price"
                    android:textAlignment="viewStart"
                    android:textDirection="locale"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/edtItemPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:fontFamily="@font/expressway_rg"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    />
                <TextView
                    android:id="@+id/txtQty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:textAlignment="viewStart"
                    android:textDirection="locale"
                    android:fontFamily="@font/expressway_rg"
                    android:text="@string/quantity"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/edtItemQty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/expressway_rg"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/cardView"/>

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/delete_btn"
        android:elevation="@dimen/_10sdp"
        android:padding="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>