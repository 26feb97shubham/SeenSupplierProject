                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black"
                    android:layout_below="@+id/txtUpdateLicense"
                    android:layout_marginTop="@dimen/_20sdp"
