    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:fontFamily="@font/expressway_rg"
        android:src="@drawable/ic_launcher_foreground"
        android:text="@string/contact_us"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#515151"
        android:textSize="@dimen/_15ssp"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_30sdp"
        android:paddingTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            >


            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/contact_graphic"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:fontFamily="@font/expressway_rg"
                android:textColor="@color/gold"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/get_in_touch"
                app:layout_constraintTop_toBottomOf="@+id/imgIcon"/>
            <TextView
                android:id="@+id/txtDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/feel_free_to_contact_us_anytime_we_will_get_back_to_you_as_soon_as_we_can"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtDetails"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/iv_facebook"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/facebook_icon"/>

                <ImageView
                    android:id="@+id/iv_instagram"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/instagram_icon"/>

                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/twitter_icon"/>

                <ImageView
                    android:id="@+id/iv_snapchat"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/snapchat_icon"/>
            </LinearLayout>
            <EditText
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:id="@+id/edtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/name"
                android:maxLines="1"
                android:maxLength="55"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:layout_marginTop="@dimen/_30sdp"
                app:layout_constraintTop_toBottomOf="@+id/txtDetails"/>
            <EditText
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:id="@+id/edtEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expressway_rg"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:imeOptions="actionNext"
                android:hint="@string/email_address"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toBottomOf="@+id/edtName"/>
            <EditText
                android:textDirection="locale"
                android:id="@+id/edtMessage"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:fontFamily="@font/expressway_rg"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/message"
                android:gravity="top"
                android:layout_marginTop="@dimen/_10sdp"
                android:maxLength="500"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@+id/edtEmail"/>
            <TextView
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintTop_toBottomOf="@+id/edtMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/gold_filled_rect_box"
                android:fontFamily="@font/expressway_rg"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/_15ssp"
                android:textAllCaps="true"
                android:letterSpacing="0.12"
                android:text="@string/send"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
